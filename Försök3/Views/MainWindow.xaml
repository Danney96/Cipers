<Window x:Class="Försök3.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Försök3.ViewModel"
        xmlns:vm="clr-namespace:Försök3.ViewModel"
        mc:Ignorable="d"
        Title="Garderob" Height="auto" Width="auto"
        MinHeight="200" MinWidth="150" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <StackPanel>
        <StackPanel>
            <Label Margin="10,10,0,0" VerticalAlignment="Top">Välj person:</Label>
            <ComboBox x:Name="comboPerson" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Person}"
                      DisplayMemberPath="PersonnummerID" SelectedValuePath="PersonnummerID"/>
        </StackPanel>

        <StackPanel>
            <Label Margin="10,10,0,0" VerticalAlignment="Top">Välj klädesplagg:</Label>
            <ComboBox x:Name="comboPlagg" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Klädesplagg}"
                      DisplayMemberPath="ProduktNamn" SelectedValuePath="ProduktNamn"/>
        </StackPanel>
        <Button Width="120" Height="20" HorizontalAlignment="Left" Margin="10,20,0,0" Click="Button_Click">Generera annons</Button>
    </StackPanel>
</Window>
